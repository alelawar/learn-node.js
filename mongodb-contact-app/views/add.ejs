<h1>Tambah kontak</h1>

<% if (typeof errors != 'undefined') { %>
    <div class="alert alert-primary" role="alert">
     <ul>
      <% errors.forEach(e => { %>
        <li><%= e.msg %></li>
      <% }) %>
     </ul>
    </div>
  <% } %>

<form action="/contact" method="post">
    <div class="">
        <label for="nama">Nama :</label>
        <input type="text" name="nama" id="nama" placeholder="Masukan nama..." required>
    </div>
    <br>
    <div class="">
        <label for="email">Email :</label>
        <input type="email" name="email" id="email" placeholder="Masukan email..." required>
    </div>
    <br>
    <div class="">
        <label for="nohp">Nomer Telepon :</label>
        <input type="number" name="nohp" id="no" placeholder="Masukan no..." required>
    </div>
    <div class="">
        <button type="submit">Buat</button>
    </div>
    <br>
   
</form>